<h1>Edit Story</h1>
<div class="row">
  <form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <label>Status
    <input list="status" name="status" /></label>
        <datalist id="status">
            <option value="Private">
            <option value="Public">
            <option value="Unpublished">
            
        </datalist>
      </div>
    </div>
<br>
<br>
<br>
<br>

    <div class="row">
     
        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}} checked="checked" {{/if}}>Allow Comments<br>
      
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea name="body">{{story.body}}</textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>